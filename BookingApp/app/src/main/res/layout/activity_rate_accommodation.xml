<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RateAccommodationActivity">





    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent1"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:weightSum="8">

            <ImageButton
                android:id="@+id/languageButton"
                android:layout_width="6dp"
                android:layout_height="26dp"
                android:layout_marginTop="18dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="Language Button"
                android:scaleType="fitCenter"
                android:src="@drawable/language_icon" />

            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="18dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="Settings Button"
                android:scaleType="fitCenter"
                android:src="@drawable/settings_icon" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/firstNameInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintWidth_percent="0.75"/>

    <RadioGroup
        android:id="@+id/radioGroupRole"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstNameInput"
        app:layout_constraintWidth_percent="0.5">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="1"
            app:buttonTint="@color/colorButton"
            android:fontFamily="serif"/>

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="2"
            app:buttonTint="@color/colorButton"
            android:fontFamily="serif"

            />
        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="3"
            app:buttonTint="@color/colorButton"
            android:fontFamily="serif"

            />
        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="4"
            app:buttonTint="@color/colorButton"
            android:fontFamily="serif"

            />
        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="5"
            app:buttonTint="@color/colorButton"
            android:fontFamily="serif"

            />

    </RadioGroup>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/CommentInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroupRole"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintHorizontal_bias="0.5">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/CommentInput"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:hint="Comment:"
            android:padding="12dp" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/buttonRateAccommodation"
        android:layout_width="205dp"
        android:layout_height="57dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/colorButton"
        android:fontFamily="serif"
        android:text="Rate accommodation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CommentInputLayout"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="235dp"
        android:layout_height="40dp"
        android:layout_marginLeft="25px"
        android:layout_marginTop="25dp"
        android:text="RATE ACCOMMODATION"
        android:textColor="@color/colorAccent1"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Grade:"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />


</androidx.constraintlayout.widget.ConstraintLayout>